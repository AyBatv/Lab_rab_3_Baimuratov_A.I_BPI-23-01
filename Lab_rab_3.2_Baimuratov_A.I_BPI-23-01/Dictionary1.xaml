<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Кисть для светлого фона -->
    <LinearGradientBrush x:Key="LightBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FFFAFA" Offset="0"/>
        <GradientStop Color="#E6F3FF" Offset="1"/>
    </LinearGradientBrush>

    <!-- Стиль для RadioButton -->
    <Style x:Key="FormulaRadioButtonStyle" TargetType="RadioButton">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="#4CAF50"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Margin" Value="8,5"/>
        <Setter Property="Padding" Value="5"/>
        <Style.Triggers>
            <Trigger Property="IsChecked" Value="True">
                <Setter Property="BorderBrush" Value="#2196F3"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#E3F2FD" Offset="0"/>
                            <GradientStop Color="#BBDEFB" Offset="1"/>
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
            </Trigger>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="BorderBrush" Value="#FF9800"/>
                <Setter Property="Background">
                    <Setter.Value>
                        <SolidColorBrush Color="#FFF3E0"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Стиль для GroupBox -->
    <Style x:Key="ParametersGroupBoxStyle" TargetType="GroupBox">
        <Setter Property="BorderBrush" Value="#90A4AE"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#F5F5F5" Offset="0"/>
                    <GradientStop Color="#ECEFF1" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground" Value="#263238"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Margin" Value="5"/>
    </Style>

    <!-- Стиль для TextBox -->
    <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="#B0BEC5"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Foreground" Value="#212121"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Style.Triggers>
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="BorderBrush" Value="#2196F3"/>
                <Setter Property="BorderThickness" Value="2"/>
            </Trigger>
            <Trigger Property="Validation.HasError" Value="True">
                <Setter Property="BorderBrush" Value="#F44336"/>
                <Setter Property="Background" Value="#FFEBEE"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Стиль для ComboBox -->
    <Style x:Key="ParameterComboBoxStyle" TargetType="ComboBox">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="White" Offset="0"/>
                    <GradientStop Color="#F5F5F5" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="#B0BEC5"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Foreground" Value="#212121"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Height" Value="24"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>

    <!-- Стиль для кнопки расчета -->
    <Style x:Key="CalculateButtonStyle" TargetType="Button">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#4CAF50" Offset="0"/>
                    <GradientStop Color="#388E3C" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="#2E7D32"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Padding" Value="15,8"/>
        <Setter Property="Margin" Value="10"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#66BB6A" Offset="0"/>
                            <GradientStop Color="#4CAF50" Offset="1"/>
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
                <Setter Property="Cursor" Value="Hand"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background">
                    <Setter.Value>
                        <SolidColorBrush Color="#1B5E20"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Стиль для TextBlock с результатом -->
    <Style x:Key="ResultTextBlockStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#1A237E"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#E8EAF6" Offset="0"/>
                    <GradientStop Color="#C5CAE9" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="#5C6BC0"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <!-- Стиль для Label -->
    <Style x:Key="ParameterLabelStyle" TargetType="Label">
        <Setter Property="Foreground" Value="#37474F"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Padding" Value="5,0"/>
    </Style>

    <!-- Стиль для изображений формул -->
    <Style x:Key="FormulaImageStyle" TargetType="Image">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Stretch" Value="Uniform"/>
    </Style>
</ResourceDictionary>